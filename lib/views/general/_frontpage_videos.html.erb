      { title: 'Workshop: What can you do with FOI?',
        id: 'meaLp7p2Yok' },
    ]
%>

<div class="homepage-video-section" id="homepage-video">
    <div class="row homepage-video-section__vs-content">
        <div class="vs-content__headings ">
            <h2><%= _("Recent videos") %></h2>
        </div>

        <div class="vs-content__video-grid col-3-grid">
            <% @research_videos.sample(3).each do |article| %>
                <div class="video-grid__item">
                <img class="item-content__img" src="http://img.youtube.com/vi/<%= article[:id] %>/hqdefault.jpg" alt="<%= article[:title] %>" loading="lazy">
                    <div class="video-grid__item-content">
                        <h3 class="item-content__heading">
                          <%= article[:title] %>
                        </h3>

                        <a class="external-link link-with-icon youtube-icon" href="https://www.youtube.com/watch?v=<%= article[:id] %>" target="_blank">Watch on YouTube</a>
                    </div>
                </div>
            <% end %>
        </div>

        <div class="cta-button-wrapper">
            <a class="button" href="https://www.mysociety.org/donate/?utm_medium=link&how-much=10">Donate Â£10</a>
            <span>to support our research or <a href="https://www.youtube.com/mysociety">browse more</a></span>
